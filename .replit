entrypoint = "main.py"
modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "rustc"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["gunicorn", "--bind=0.0.0.0:5000", "--workers=2", "--threads=2", "--timeout=120", "--keep-alive=5", "main:app"]
deploymentTarget = "autoscale"

[agent]
expertMode = true
integrations = ["python_database:1.0.0", "python_openrouter_ai_integrations:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask App"

[[workflows.workflow]]
name = "Flask App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind=0.0.0.0:5000 --workers=1 --threads=1 --timeout=120 --keep-alive=5 --max-requests=200 --max-requests-jitter=50 --worker-tmp-dir=/dev/shm main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.shared]
SUPABASE_URL = "https://coxwuuwhujsyxlzvjjke.supabase.co"
